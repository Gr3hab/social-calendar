# Frontend auth mode
VITE_AUTH_MODE=mock

# Used when VITE_AUTH_MODE=api
VITE_AUTH_API_BASE_URL=http://127.0.0.1:8787

# Optional Vite proxy override for /api/auth in local dev
VITE_AUTH_PROXY_TARGET=http://127.0.0.1:8787

# Auth API server runtime
AUTH_API_HOST=127.0.0.1
AUTH_API_PORT=8787
AUTH_API_SECRET=replace-with-very-long-secret
AUTH_API_CORS_ORIGIN=http://127.0.0.1:5173

# Store mode: memory | redis
AUTH_STORE=memory
# AUTH_REDIS_URL=redis://127.0.0.1:6379
# AUTH_REDIS_PREFIX=social-cal-auth

# Data mode for frontend (api | mock)
VITE_DATA_MODE=mock
VITE_DATA_API_BASE_URL=http://127.0.0.1:8787

# Feature Flags
VITE_FEATURE_AUTH_MAGIC_LINK_ONLY=false
VITE_FEATURE_PHONE_OPTIONAL=true
VITE_FEATURE_PUBLIC_RSVP=true
VITE_FEATURE_NATIVE_IOS_ENABLED=false

# Data API persistence: memory | postgres
DATA_STORE=memory
# DATA_POSTGRES_URL=postgres://user:password@127.0.0.1:5432/social_calendar
DATA_POSTGRES_SSL=false
DATA_SCOPE=default
# Legacy snapshot table name for one-time import fallback
DATA_TABLE_NAME=app_data_state
DATA_INVITE_SECRET=replace-with-long-invite-secret
PUBLIC_APP_BASE_URL=http://127.0.0.1:5173

# SMS provider mode: mock | twilio
AUTH_SMS_PROVIDER=mock
AUTH_SMS_FROM=
AUTH_SMS_REQUEST_TIMEOUT_MS=10000
AUTH_SMS_MAX_RETRIES=2

# Twilio (required when AUTH_SMS_PROVIDER=twilio)
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ========================================
# SUPABASE CONFIGURATION (NEW)
# ========================================

# Supabase Connection
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

